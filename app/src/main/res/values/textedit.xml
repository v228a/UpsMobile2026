<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TextEdit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/graytextedit</item>
        <item name="boxBackgroundColor">@color/graytextedit</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCollapsedPaddingTop">4dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="hintTextAppearance">@style/Theme.TextEdit.hint</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>

        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintAnimationEnabled">false</item>

    </style>
    
    
    <style name="Theme.TextEdit.hint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item> <!-- Размер шрифта -->
        <item name="android:fontFamily">@font/labgrotesquemedium</item> <!-- Кастомный шрифт -->
        <item name="android:textColor">@color/graytextedit</item> <!-- Цвет текста -->
    </style>
    <style name="Theme.TextEdit.Text">
        <item name="singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/labgrotesquemedium</item>
    </style>
</resources>